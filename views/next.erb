<!DOCTYPE html>
<html>
<head>
<link rel="stylesheet" type="text/css" href="../css/style.css" />
</head>
  <body>
    <div class='menu-container'>
      <div class='menu'>
        <div class='welcome'><h1>Now for the computer's turn!</h1></div>
        <div><p>Let's play Rock, Paper, Scissors!</p></div> 
      </div>
    </div>
    <div class = "form-container">
      <div><h2>Choose Rock, Paper or Scissors</h2></div>
      <div class="form">
        <form action="/result">
        <div class="radio-toolbar">
          <input id="rock" name="attack_type" type="radio" value="rock" /> Rock<br />
          <input id="paper" name="attack_type" type="radio" value="paper" /> Paper<br />
          <input id="scissors" name="attack_type" type="radio" value="scissors" /> Scissors<br />
        </div>
        <input type="submit" value="Submit">
        </form>
      </div>
    </div>
    <div class='header-container'>
      <div class='header'>
        <% if @player_1_choice == 'rock' %>
          <div class='player1'><img src='images/rock.png'/></div>
        <% elsif @player_1_choice == 'paper' %>
          <div class='player1'><img src='images/paper.png'/></div>
        <% else %>
          <div class='player1'><img src='images/scissors.png'/></div>
        <% end %> 
        <div class='RPS_logo'></div>
        <div class='player2'><img src='images/question_mark.png'/></div>
      </div>
    </div>
    
  </body>
</html>